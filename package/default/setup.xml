<setup>
	<block title="Seckit Geolocation with Maxmind" endpoint="seckit_sa_geolocation_setup/seckit_sa_geolocation_script" entity="seckit_sa_geolocation_script">
		<input field="script_enabled">
			<label>Enable Splunk Enterprise to automatically update the maxmind mmdb lookup table with the latest available database published by MaxMind</label>
			<type>bool</type>
		</input>       
	</block>

  <block title="Add new credentials" endpoint="storage/passwords" entity="_new">
    <input field="name">
      <label>Account ID</label>
      <type>text</type>
    </input>

    <input field="password">
      <label>Password</label>
      <type>password</type>
    </input>
  </block>


	<block title="Proxy Settings" endpoint="seckit_sa_geolocation_setup/seckit_sa_geolocation_proxy" entity="seckit_sa_geolocation_proxy">
		<input field="proxy_enabled">
			<label>Enable proxy</label>
			<type>bool</type>
		</input>
		<input field="proxy_url">
			<label>Host or IP</label>
			<type>text</type>
		</input>
		<input field="proxy_port">
			<label>Port</label>
			<type>text</type>
		</input>
		<input field="proxy_username">
			<label>Username</label>
			<type>text</type>
		</input>
		<input field="proxy_password">
			<label>Password</label>
			<type>password</type>
		</input>
        <input field="proxy_rdns">
            <label>Use proxy to do DNS resolution</label>
            <type>bool</type>
        </input>
        <input field="proxy_type">
            <label>Proxy type</label>
            <type>text</type>
        </input>
        <text>
            <![CDATA[ <script type="text/javascript">
              $(function() {
                var proxy_host = $("#item-\\/seckit_sa_geolocation_setup\\/seckit_sa_geolocation_proxy\\/seckit_sa_geolocation_proxy\\/proxy_url");
                var proxy_port = $("#item-\\/seckit_sa_geolocation_setup\\/seckit_sa_geolocation_proxy\\/seckit_sa_geolocation_proxy\\/proxy_port");
                var proxy_user = $("#item-\\/seckit_sa_geolocation_setup\\/seckit_sa_geolocation_proxy\\/seckit_sa_geolocation_proxy\\/proxy_username");
