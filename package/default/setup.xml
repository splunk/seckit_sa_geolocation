                var proxy_type = $("#\\/seckit_sa_geolocation_setup\\/seckit_sa_geolocation_proxy\\/seckit_sa_geolocation_proxy\\/proxy_type_id");
                var current_proxy_type = proxy_type.val();
                var proxytypes = ['http', 'http_no_tunnel', 'socks4', 'socks5'];
